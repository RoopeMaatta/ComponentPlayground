{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "es2020", "dom.iterable"],
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "./",
    "paths": {
      "@utils/*": ["src/utils/*"],
      "@hooks/*": ["src/hooks/*"],
    }
  },
  "include": ["src", "eslint-custom-rules", "vite.config.ts"]
}
